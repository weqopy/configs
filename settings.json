{
    // Python 配置
    "python.pythonPath": "~/venv/bin/python",
    "python.venvPath": "~/venv/",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        ".eggs/**",
    ],
    //
    // 工作区设置
    "workbench.colorTheme": "Solarized Light",
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#caf0f3fa",
        "editor.selectionBackground": "#99eafc"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    //
    // 编辑器设置
    "editor.wordWrap": "on",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.fontFamily": "Monaco",
    "editor.fontSize": 13,
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": false,
    "editor.roundedSelection": false,
    "editor.wrappingIndent": "indent",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.showFoldingControls": "always",
    //
    // 终端设置
    "terminal.integrated.rightClickBehavior": "selectWord",
    "terminal.integrated.fontSize": 13,
    "terminal.external.osxExec": "iterm.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorStyle": "line",
    //
    // 文件设置
    "files.exclude": {
        "**/__pycache__": true,
        "**/.idea": true,
        "**/.ipynb_checkpoints": true,
        "**/.gitignore": true,
        "**.pyc": true,
        "**/.github": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/extra_apps": true,
        "**/mxpro/static": true,
        "**/mxpro/media": true,
        "**/mxoline-project/static": true,
        "**/mxoline-project/media": true,
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.defaultLanguage": "Python",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openExplorerOnEnd": true,
    //
    // 其他设置
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    //
    // 插件设置
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "sync.gist": "21b33ccd186475771f3c20ca77d38768",
    "sync.lastUpload": "2018-07-07T12:58:24.692Z",
    "sync.lastDownload": "2018-03-31T04:47:51.045Z",
    "sync.forceDownload": false,
    "sync.quietSync": true,
    "sync.host": "",
    "sync.pathPrefix": "",
    "sync.askGistName": false,
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "git.confirmSync": false,
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.defaultDateFormat": "YY-MM-DD HH:mm:ss",
    "gitlens.statusBar.alignment": "left",
    "bracketPairColorizer.forceUniqueOpeningColor": true,
    "bracketPairColorizer.consecutivePairColors": [
        "()",
        "[]",
        "{}",
        [
            "DeepSkyBlue",
            "Orchid",
            "Aqua",
            "Blue"
        ],
        "Red"
    ],
}
